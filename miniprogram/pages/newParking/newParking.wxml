<view class="item">
  <text>地址：</text>
  <text>{{address}}</text>
</view>

<form bindsubmit="formSubmit" bindreset="formReset">
  <!-- 添加车位 -->
  <view>
    <text>锁id: </text>
    <input type="string" name='lockid'></input>
  </view>

  <!-- 设置价格 -->
  <view>
    <text>价格</text>
    <input type="number" name="price" placeholder="建议5元"></input>
    <text>元/小时</text>
  </view>
  <!-- 提交、复位按钮 -->
  <view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>
</form>

/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.userinfo{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.nickname {
  text-align: center;
  color: #9B9B9B;
  font-size: 40rpx;
  /* margin: 10rpx 0 60rpx; */
}

.item{
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.item {
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.item-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: black;
}



.item-image {
  width: 100%;
  height: 360rpx;
}
